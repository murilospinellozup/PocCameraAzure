<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			
			<ImageView
				android:id="@+id/imagemForm"
				android:layout_width="match_parent"
				android:layout_height="350dp"
				android:background="#0499ea"
				android:scaleType="centerCrop"
				android:src="@drawable/person" />
			
			<Button
				android:id="@+id/botaoFotoForm"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_alignBottom="@+id/imagemForm"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:layout_margin="10dp"
				android:background="@drawable/layout_botao_foto" />
			
			<TextView
				android:id="@+id/tvLabel"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Tire a foto do seu documento!"
				android:textStyle="bold"
				android:textSize="26sp"
				android:textColor="@android:color/black"
				android:gravity="center"
				android:layout_below="@+id/imagemForm"/>
			
			<Button
				android:id="@+id/botaoEnviar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:layout_margin="10dp"
				android:padding="10dp"
				android:text="Enviar foto"
				android:textColor="@android:color/white"
				android:background="@drawable/bt_nav_header_login_bg"
				android:gravity="center" />
			
			
			<ProgressBar
				android:id="@+id/progressBar"
				style="?android:attr/progressBarStyleSmall"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:visibility="invisible"
				android:layout_marginTop="20dp"
				android:layout_below="@+id/tvLabel"
				android:layout_centerHorizontal="true"/>
		
		</RelativeLayout>
	</FrameLayout>

</RelativeLayout>
